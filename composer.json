{
    "type": "library",
    "name": "mindplay/sql",
    "description": "Database framework and query builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Rasmus Schultz",
            "email": "rasmus@mindplay.dk",
            "role": "Maintainer"
        },
        {
            "name": "Thomas Nordahl",
            "email": "thno@jfmedier.dk",
            "role": "Co-maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "mindplay\\sql\\": "src/"
        }
    },
    "require": {
        "php": ">=5.5",
        "ext-pdo": "*",
        "mindplay/unbox": "^2",
        "psr/log": "^1"
    },
    "require-dev": {
        "mindplay/testies": "^0.3.2",
        "mindplay/benchpress": "^0.1",
        "mockery/mockery": "^0.9",
        "phpunit/php-code-coverage": ">=2, <4"
    },
    "suggest": {
        "ext-pdo_pgsql": "for PostgreSQL support (duh.)",
        "ext-pdo_mysql": "for MySQL support (hello, Captain Obvious.)"
    }
}
